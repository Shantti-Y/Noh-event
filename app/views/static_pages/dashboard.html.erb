<h1 class="section-header">最新の公演情報</h1>
<% @events.each do |event| %>
<div class="event-content">
   <div class="content-title">
      <%= link_to event.title, event_path(event) %>
      <button><%= fa_icon('check-square-o')%></button><!-- TODO Userがクリップする機能 -->
   </div>
   <ul class="content-info">
      <li class="place"><%= event.place.title %></li>
      <li class="date"><%= event.start_date.strftime("%Y年%m月%d日 %H:%M")%></li>
   </ul>
   <ul class="content-tickets">
      <% event.tickets.each do |ticket| %>
      <li><%= ticket.grade %>：<%= ticket.price %></li>
      <% end %>
   </ul>
</div>
<% end %>

