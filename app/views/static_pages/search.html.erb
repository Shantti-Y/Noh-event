<div id="search">
   <div class="headline">
      <h1>公演検索</h1>
   </div>
   <div class="form-section">
      <h1 class="form-header">検索条件の設定</h1>
      <%= form_for(:search, url: events_path, method: :get) do |f| %>
         <dl>
            <dt>開催日</dt>
            <dd>
               <%= f.text_field :start_date, class: 'datepicker-for-search date-selection', id: "start-date" %>
               <span>～</span>
               <%= f.text_field :end_date, class: 'datepicker-for-search date-selection', id: "end-date" %>
            </dd>
         </dl>
         <dl>
            <dt>エリア</dt>
            <dd id="search-address-vue"></dd>
         </dl>
         <dl>
            <dt>キーワード</dt>
            <dd><%= f.text_field :keywd, id: 'keywd' %></dd>
         </dl>
         <%= f.submit('検索する', class: 'form-submit') %>
      <% end %>
   </div>
</div>
