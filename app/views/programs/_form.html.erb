<%= form_for(@program) do |f| %>
<% err_msg = f.object.errors %>
<div class="form-section">
   <h1 class="form-header">情報を入力</h1>
   <%= f.hidden_field :shimai, value: true %>

   <div class="lg-form">
      <label>演目名</label><span class="required">必須</span>
      <%= f.text_field :title %>
      <p class="error-msg"><%= err_msg.full_messages_for(:name)[0] %></p>
   </div>
   <div class="lg-form">
      <label>曲目の種類</label><span class="required">必須</span>
      <%= f.text_field :category %>
      <p class="error-msg"><%= err_msg.full_messages_for(:email)[0] %></p>
   </div>
   <div class="lg-form">
      <label>演目時間(参考)</label><span class="required">必須</span>
      <%= f.text_field :duration %>
      <p class="error-msg"><%= err_msg.full_messages_for(:email)[0] %></p>
   </div>
</div>

<%= f.submit "登録する", class: 'form-submit' %>
   <% end %>
