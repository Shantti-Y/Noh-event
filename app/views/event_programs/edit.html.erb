<div id="event-programs-edit">

   <%= form_for(:event, url: event_program_path(@event), method: 'patch') do |f| %>
   <div class="form-section">
      <h1 class="form-header">演目の編集</h1>
      <h2 class="form-header">現在設定されている演目</h2>

      <%= content_tag :div,
         id: 'event-programs-edit-vue',
         data: { event:               @event,
                 event_programs:      @event_programs,
                 event_performers:    @event_performers,
                 performers:          @performers,
                 programs:            @programs,
                 ev_program_params:   @ev_program_params }.to_json do %>
      <% end %>
      <h2 class="form-header">演目の新規追加</h2>

      <div id="event-programs-new-vue"></div>
   </div>
   <%= f.submit('保存', class: 'form-submit') %>
   <% end %>
</div>
