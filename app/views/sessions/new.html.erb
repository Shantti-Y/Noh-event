<div id="login">
   <div class="headline">
      <h1>ログイン</h1>
   </div>

   <%= form_for(:session, url: login_path) do |f| %>
   <div class="form-section">
      <h1 class="form-header">ログイン情報入力</h1>

      <div class="md-form">
         <label>Eメールアドレス</label>
         <%= f.text_field :email %>
      </div>
      <div class="md-form">
         <label>パスワード</label>
         <%= f.password_field :password %>
      </div>
   </div>
   <%= f.submit 'ログイン', class: 'form-submit' %>
   <% end %>
</div>
