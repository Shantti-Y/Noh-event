<div id="places-show">
   <div class="place-info">

      <%= content_tag :div,
         id: 'places-show-vue',
         data: { title: @place.title }.to_json do %>
         </div>
      <% end %>

      <ul>
         <li class="title"><%= @place.title %></li>
         <li class="address"><%= @place.address %></li>
         <li class="official_url"><%= @place.official_url %></li>
         <li class="created-at">登録日：<%= @place.created_at.strftime("%Y/%m/%d") %></li>
      </ul>
   </div>

   <div class="place-command">
      <%= link_to '情報の編集', edit_place_path(@place) %>
   </div>

   <div class="section">
      <h1 class="section-header"><%= @place.title %>で開催される公演</h1>
      <% if @events.count > 0 %>
      <%= render 'shared/event_articles' %>

      <% else %>
      <p class="port-link">関連する公演はありません</p>
      <% end %>
   </div>
</div>
