<div id="places-edit">

   <%= form_for(@event.place) do |f| %>
   <div class="form-section">
      <h1 class="form-header">会場の編集</h1>

      <div class="lg-form">
         <label>会場名</label><span class="required">必須</span>
         <%= f.text_field :title %>
      </div>
      <div class="lg-form">
         <label>住所</label>
         <%= f.text_field :address %>
      </div>
      <div class="lg-form">
         <label>サイトURL</label>
         <%= f.text_field :official_url %>
      </div>
   </div>

   <input class="form-submit" type="submit" value="保存">
   <% end %>
</div>
