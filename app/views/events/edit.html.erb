<div id="events-edit">
   <div class="headline">
      <h1>基本情報の編集</h1>
   </div>

   <%= form_for(@event) do |f| %>
   <div class="form-section">
      <h1 class="form-header">基本情報の編集</h1>

      <div class="lg-form">
         <label>公演名</label><span>必須</span>
         <input type="text">
      </div>
      <div class="lg-form">
         <label>開始時間</label><span>必須</span>
         <%= f.text_field :start_date, class: 'datepicker', id: "start-date" %>
      </div>
      <div class="lg-form">
         <label>終了時間</label>
         <%= f.text_field :end_date, class: 'datepicker', id: "end-date" %>
      </div>
      <div class="lg-form">
         <label>説明</label>
         <textarea></textarea>
      </div>
   </div>

   <input class="form-submit" type="submit" value="保存">
   <% end %>
</div>
