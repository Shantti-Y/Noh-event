<div id="events-edit">
   <%= form_for(@event) do |f| %>
   <div class="form-section">
      <h1 class="form-header">基本情報の編集</h1>

      <div class="lg-form">
         <label>公演名</label><span class="required">必須</span>
         <%= f.text_field :title %>
      </div>
      <div class="lg-form">
         <label>開始時間</label><span class="required">必須</span>
         <%= f.text_field :start_date, class: 'datepicker', id: "start-date", value: (@event.start_date.strftime('%Y年 %m月 %d日 %H:%M') if @event.start_date) %>
      </div>
      <div class="lg-form">
         <label>終了時間</label>
         <%= f.text_field :end_date, class: 'datepicker', id: "end-date", value: (@event.end_date.strftime('%Y年 %m月 %d日 %H:%M') if @event.end_date) %>
      </div>
      <div class="lg-form">
         <label>説明</label>
         <%= f.text_area :information %>
      </div>
      <div class="lg-form">
         <label>サイトURL</label>
         <%= f.text_field :official_url %>
      </div>
   </div>

   <input class="form-submit" type="submit" value="保存">

   <% end %>
</div>
